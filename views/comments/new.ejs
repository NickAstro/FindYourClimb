<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new comment to <%= location.name %></h1>
        <div style="width: 30%; margin: 35px auto;">
            <form action="/locations/<%= location._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Your comment here">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/locations/<%= location._id %>">Go back</a>
            
        </div>
    </div>

</div>


<% include ../partials/footer %>
<% include partials/header %>

<div class="container">
    <header class="jumbotron">
      <div class="container">
          <h1>Locations page</h1>
          <p>User submitted climbing sites</p>
          <p>
              <a class="btn btn-primary btn-large" href="/locations/new">Click to add a new location</a>
          </p>
      </div>
    </header>
      
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">

      <% locations.forEach(function(location) { %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= location.image %>"></img>
              <div class="caption">
                <h3><%= location.name %></h3>
              </div>
              <p>
                <a href="/locations/<%= location._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
              
          </div>
      <% }); %>
      
    </div>
</div>

<% include partials/footer %>